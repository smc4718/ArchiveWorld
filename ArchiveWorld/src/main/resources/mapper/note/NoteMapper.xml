<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ArchiveWorld.note.NoteMapper">

    <resultMap id="NoteMap" type="NoteDto">
        <id     column="note_no"    property="noteNo" />
        <result column="title"      property="title" />
        <result column="contents"   property="contents" />
        <result column="created_at" property="createdAt" />
        <result column="hit"        property="hit" />
    </resultMap>

    <!-- λ…ΈνΈ μ¶”κ°€ -->
    <insert id="insertNote" parameterType="NoteDto"
            useGeneratedKeys="true" keyProperty="noteNo" keyColumn="note_no">
        INSERT INTO note_t (
            title,
            contents
        ) VALUES (
            #{title},
            #{contents}
        )
    </insert>

</mapper>